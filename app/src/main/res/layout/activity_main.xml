<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_recibir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar carta"/>

    <ImageView
        android:id="@+id/iv_carta1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_recibir"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/carta"/>

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_below="@id/iv_carta1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Resultado"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_resultado"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar resultado"/>

    <TextView
        android:id="@+id/tv_mensaje"
        android:layout_below="@id/btn_enviar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_nuevo"
        android:layout_below="@+id/tv_mensaje"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo juego"
        android:layout_marginTop="20dp"/>

</RelativeLayout>